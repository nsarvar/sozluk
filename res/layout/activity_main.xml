<?xml version ="1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_box_background"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:paddingBottom="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="6dp"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/turkish_letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_i"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ı" >
            </Button>

            <Button
                android:id="@+id/button_s"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ş" >
            </Button>

            <Button
                android:id="@+id/button_g"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ğ" >
            </Button>

            <Button
                android:id="@+id/button_c"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ç" >
            </Button>

            <Button
                android:id="@+id/button_o"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ö" >
            </Button>

            <Button
                android:id="@+id/button_u"
                style="@style/ButtonText"
                android:background="@drawable/btn_red"
                android:onClick="click_turkish_special_letters"
                android:text="ü" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ccc" >
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>